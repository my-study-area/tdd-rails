<% if @customer.errors.any? %>
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Novo Cliente</h1>
<%= form_for @customer do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %> <br>

  <%= form.label :email %>
  <%= form.text_field :email %> <br>

  <%= form.label :phone %>
  <%= form.text_field :phone %> <br>

  <%= form.label :avatar %>
  <%= form.file_field :avatar %> <br>

  <%= form.label :smoker %> <br>
  <% { 'S': 'Sim', 'N': 'NÃ£o' }.each do |key, value| %>
    <%= form.radio_button :smoker, key %> <%= value %> <br>
  <% end %>

<%= form.submit  %>
<% end %>
